<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"

        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details:"
            android:textSize="30dp"

            />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upper"
        android:background="@drawable/rounded"

        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Event Name:"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/event_name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/rounded"
                            android:inputType="textCapWords"
                            android:textSize="15dp"
                            android:maxLines="1" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Date "

                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/dateofbrith"
                                android:textSize="20dp"
                                android:layout_width="150dp"
                                android:layout_height="30dp"

                                android:layout_marginTop="5dp"
                                android:focusableInTouchMode="false"

                                android:background="@drawable/rounded"

                                android:paddingLeft="5dp" />

                            <ImageView
                                android:id="@+id/calandar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:onClick="calandar"
                                android:src="@drawable/ic_calandar"


                                />


                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Select Location "
                    android:id="@+id/select_location"
                    android:textSize="15dp" />

                <TextView

                    android:id="@+id/place_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Select Time "

                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/select_time"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/rounded"
                            android:paddingLeft="5dp" />

                        <ImageView
                            android:id="@+id/clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_clock"


                            />


                    </LinearLayout>



                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Event Description"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="start"
                    android:paddingTop="4dp"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded"
                    android:paddingLeft="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:text="Activities :"

                    android:textSize="15dp" />


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded"


                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">


                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 1"
                            android:inputType="textCapWords"
                            android:id="@+id/activity_one"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/activity_two"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 2"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/activity_three"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 3"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/activity_four"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 4"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/activity_five"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 5"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />


                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Members requrie for event: "

                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text=" Type of Members required for event: "

                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_doctor"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Doctors"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/doctor_txt"
                            android:paddingLeft="5dp"
                            android:maxLength="2"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/doctor"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_sweeper"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Sweepers"/>
                        <EditText

                            android:textSize="15dp"
                            android:maxLength="2"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/sweeper_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/sweeper"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/c_transportation"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Transportation"/>
                        <EditText

                            android:textSize="15dp"
                            android:maxLength="2"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/transportation_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/transportation"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_video"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Videographer"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:maxLength="2"
                            android:paddingLeft="5dp"
                            android:id="@+id/videographer_txt"
                            android:layout_height="30dp"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/videographer"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_clock_room"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Clock Room Manger "/>
                        <EditText

                            android:textSize="15dp"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/clock_txt"
                            android:inputType="number"
                            android:maxLength="2"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/clock_room_manager"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_info"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Infodesk"/>
                        <EditText

                            android:textSize="15dp"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:maxLength="2"
                            android:id="@+id/info_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/infodesk"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_network"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Network Buildup"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:maxLength="2"
                            android:paddingLeft="5dp"
                            android:layout_height="30dp"
                            android:id="@+id/network_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/network"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_account"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Accountant"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/accountant_txt"
                            android:maxLength="2"
                            android:paddingLeft="5dp"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/accountant"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_electri"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Electricians"/>
                        <EditText

                            android:textSize="15dp"
                            android:maxLength="2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/electrician_txt"
                            android:paddingLeft="5dp"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/electrician"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_waste"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Waste Pickers"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:maxLength="2"
                            android:layout_height="30dp"
                            android:paddingLeft="5dp"
                            android:id="@+id/waste_picker_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/waste_picker"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_helper"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Helpers"/>
                        <EditText
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/helper_txt"
                            android:maxLength="2"


                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/helper"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>







                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:onClick="update"
                    android:layout_gravity="center"
                    android:text="update"
                    android:id="@+id/add_event"/>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>

