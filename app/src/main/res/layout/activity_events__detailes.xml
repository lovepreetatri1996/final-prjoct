<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
           android:onClick="back_back"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
              android:gravity="center"
                android:textColor="#000"
                android:text="Event Details:-"
                android:textSize="30dp"
                /></RelativeLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upper"
        android:layout_margin="15dp"
        android:background="@drawable/rounded"

        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Event Name:"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/event_name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"

                            android:inputType="textCapWords"
                            android:maxLines="1" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Date "

                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dateofbrith"
                                android:layout_width="150dp"
                                android:layout_height="30dp"

                                android:layout_marginTop="5dp"
                                android:focusableInTouchMode="false"



                                android:paddingLeft="5dp" />



                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Location "
                    android:id="@+id/select_location"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/place_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" Time "

                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/select_time"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:focusableInTouchMode="false"

                            android:paddingLeft="5dp" />




                    </LinearLayout>



                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Event Description"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="start"
                    android:paddingTop="4dp"

                    android:layout_marginTop="5dp"

                    android:paddingLeft="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:text="Activities :"

                    android:textSize="15dp" />


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"



                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1"
                                android:textStyle="bold"/>


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 1"
                            android:inputType="textCapWords"
                            android:id="@+id/activity_one"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/activity_two"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 2"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="3"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/activity_three"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 3"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="4"
                            android:textStyle="bold"/>



                        <TextView
                            android:id="@+id/activity_four"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 4"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="5"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/activity_five"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Enter Activity 5"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="15dp" />
                    </LinearLayout>


                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text=" Type of Members required for event: "

                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_doctor"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Doctors"
                            android:id="@+id/doctor_t"
                            android:visibility="gone"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/doctor_txt"
                            android:paddingLeft="5dp"
                            android:inputType="number"

                            android:visibility="gone"
                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/doctor"
                            android:src="@drawable/ic_info"
                            android:visibility="gone"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_sweeper"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:text="Sweepers"
                            android:visibility="gone"
                            android:id="@+id/sweeper_t"/>
                        <EditText
                            android:visibility="gone"

                            android:textSize="15dp"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/sweeper_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/sweeper"
                            android:visibility="gone"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/c_transportation"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:id="@+id/transportation_t"
                            android:text="Transportation"/>
                        <EditText

                            android:textSize="15dp"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/transportation_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/transportation"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_video"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/videographer_t"
                            android:text="Videographer"/>
                        <EditText

                            android:textSize="15dp"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:paddingLeft="5dp"
                            android:id="@+id/videographer_txt"
                            android:layout_height="30dp"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/videographer"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_clock_room"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/clock_room_manager_t"
                            android:text="Clock Room Manger "/>
                        <EditText

                            android:textSize="15dp"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/clock_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/clock_room_manager"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_info"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/info_t"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:text="Infodesk"/>
                        <EditText

                            android:textSize="15dp"
                            android:visibility="gone"
                            android:paddingLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/info_txt"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/infodesk"
                            android:visibility="gone"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_network"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/network_t"
                            android:textStyle="bold"
                            android:text="Network Buildup"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:paddingLeft="5dp"
                            android:layout_height="30dp"
                            android:id="@+id/network_txt"
                            android:inputType="number"
                            android:visibility="gone"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/network"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_account"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:id="@+id/accountant_t"
                            android:text="Accountant"/>
                        <EditText

                            android:textSize="15dp"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/accountant_txt"
                            android:paddingLeft="5dp"
                            android:inputType="number"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/accountant"
                            android:visibility="gone"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_electri"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="160dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/electrician_t"
                            android:text="Electricians"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/electrician_txt"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:visibility="gone"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/electrician"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_waste"
                            android:visibility="gone"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/waste_picker_t"
                            android:text="Waste Pickers"/>
                        <EditText

                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingLeft="5dp"
                            android:id="@+id/waste_picker_txt"
                            android:inputType="number"
                            android:visibility="gone"

                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:visibility="gone"
                            android:id="@+id/waste_picker"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c_helper"
                            android:visibility="gone"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"

                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:id="@+id/helper_t"
                            android:text="Helpers"/>
                        <EditText
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:id="@+id/helper_txt"


                            android:background="@drawable/rounded"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/helper"
                            android:src="@drawable/ic_info"/>


                    </LinearLayout>







                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp">


                    <android.support.v7.widget.AppCompatRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:isIndicator="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/rating_bar"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ( "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/total_rating"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" )"/>

                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
